package com.string.info;

public class ejercicopag413 {

	public static void main(String[] args) {
		
		//Ejercicio: escribe un programa que dado dos String compruebe si los dos primeros caracteres son iguales.
		String a="hola";
		String b="habla";
		if(a.charAt(0)==b.charAt(0)) {
			System.out.println("son caracteres iniciales iguales");
		} else {
			System.out.println("no son caracteres iniciales iguales");
		}
		
		/*Ejercicio: escribe un programa que dado dos String compruebe si los dos primeros caracteres y 
		los dos últimos son iguales.*/
		if(a.charAt(0)==b.charAt(0)  {
			System.out.println("son caracteres iniciales  iguales");
		} else {
			System.out.println("no son caracteres iniciales iguales");
		}
		
		if (a.charAt(length()) (-1)==b.charAt(length()(-1)) {
			System.out.println("son caracteres finales  iguales");
		} else {
			System.out.println("no son caracteres finales iguales");
		}
		
		
		
		/*Ejercicio: escribe un programa que compruebe que el substring "abc" se encuentra en un
			String dado, pero no puede encontrarse ni al comienzo, ni al final.*/
		System.out.println(texto.substring("abc"));
		
		
		/*Ejercicio: escribe un programa que dado un String y un determinado índice, compruebe
			que el carácter anterior y el posterior son iguales o no.*/
		
		System.out.println(texto.substring());
		
		
		
		/*Ejercicio: escribe un programa que muestra por pantalla el índice de la segunda y tercera
			ocurrencia del carácter 'a' en un String dado.*/
		
		System.out.println(texto.lastIndexOf('a'));
		/*Ejercicio: escribe un programa que devuelva si un String es palíndromo (se escribe igual
			hacia delante y hacia detrás). Ejemplo: "sometemos".*/
		
		
		
	}

}
