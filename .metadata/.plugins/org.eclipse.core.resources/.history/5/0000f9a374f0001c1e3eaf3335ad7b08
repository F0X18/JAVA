package ExamenModulo3;
import java.util.Scanner;

public class Gestores {

	public static void main(String[] args) {
		Scanner keyboard= new Scanner(System.in);
		int numero =0;
		System.out.println("---\n"
				+ "1. Añadir gestor\r\n"
				+ "2. Modificar gestor\r\n"
				+ "3. Eliminar gestor\r\n"
				+ "4. Ver gestor\r\n"
				+ "5. Ver gestores\r\n"
				+ "6. Salir\r\n");
		while (numero !=6) {
			System.out.println("Introduzca un n�mero: ");
			numero =keyboard.nextInt();
			if (numero == 1) {
				System.out.println("1--> Añadir gestor");
			} else if (numero == 2) {
				System.out.println("2--> Modificar gestor");
			} else if (numero == 3) {
				System.out.println("3--> Eliminar gestor");
			} else if (numero == 4) {
				System.out.println("4--> Ver gestor");
			} else if (numero == 5) {
				System.out.println("5--> Ver gestores");
			}
		}
		System.out.println("6--> Salir");
		keyboard.close();
	}
	public static void añadirGestores1() {
		System.out.println("1--> Añadir gestor\n");
	}
	private static void mensajeClientes2() {
		System.out.println("2--> Modificar gestor");
	}
	private static void mensajeTransferencias3() {
		System.out.println("3--> Eliminar gestor");
	}
	private static void mensajeMensajes4() {
		System.out.println("4--> Ver gestor");
	}
	private static void mensajePrestamos5() {
		System.out.println("5--> Ver gestores");
}
}