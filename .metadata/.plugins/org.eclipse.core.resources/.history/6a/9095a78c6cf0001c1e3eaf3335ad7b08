package ExamenModulo3;
public class ExamenModulo3 {

	public static void main(String[] args) {
		//ejercicio 1
		System.out.println("Buenos días");
		System.out.println("8*13");
		int a1=8,b1=13;
		System.out.println(a1*b1);
		//ejercico 2
		
		System.out.println("1+2+3=");
		int c1=1,d1=2,e1=3;
		System.out.println(c1+d1+e1);
		//ejercicio 3
		int a = 10, b=2,c=1;
        
        System.out.println(a+b+c);
        c=4;
        System.out.printf("%d+%d+%d=%d",a,b,c,a+b+c).println();
        
        //ejercicio 4
        int angulo1=70, angulo2=50,angulo3=60;
		if (angulo1+angulo2+angulo3 == 180) {
			System.out.println("Los angulos forman un triangulo");
        
	}
	}	
}
