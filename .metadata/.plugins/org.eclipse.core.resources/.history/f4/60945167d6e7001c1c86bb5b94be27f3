import java.util.*;


public class ejercicioproyecto3 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner keyboard = new Scanner(System.in);
	int numero =0;
		
		 {
			System.out.println("Introduce un número por pantalla:\r\n" +"1. Gestores\r\n"
					 +"2. Clientes\r\n" +"3. transferencias\r\n"+"4. mensajes\r\n"+"5. prestamos\r\n"+"6. salir\r\n");
			numero =keyboard.nextInt();
			while (numero !=6)
			if (numero==1) {
				System.out.println("1 --> Gestores");
				}else if(numero==2) {
				System.out.println("2 --> Clientes");
				}else if(numero==3) {
				System.out.println("3 --> Transferencias");
				}else if (numero==4) {
				System.out.println("4 --> Mensajes");
				}else if(numero==5) {
				System.out.println("5 --> Préstamos");
				}else if(numero==6) {
					System.out.println("6 --> Salir");
		
			keyboard.close();
		}	
	}
}
