
public class Prueba {

	public static void main(String[] args) {
		StringBuilder strb1 = new StringBuilder("hola a todos");
		StringBuilder strb2 = new StringBuilder("hola a todos");
		StringBuilder strb3 = new StringBuilder("hola a todos");
		// reemplaza desde el índice 5 al índice 6 (1 carácter) por la cadena de texto dd
		strb1.replace(6, 7, "dd");
		// hola dd todos
		System.out.println(strb1);
		// reemplaza desde el índice 5 al índice 22 (hasta el final del StringBuilder) por la cadena
		//de texto dd
		strb2.replace(7, 11, "dd");
		// hola dd
		System.out.println(strb2);
		strb3.replace(8, 20, "caracolas");
		System.out.println(strb2);
	}

}
